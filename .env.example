# Telegram Bot Token (get from BotFather)
TELEGRAM_TOKEN=your_telegram_bot_token_here

# Firefly III API configuration
FIREFLY_API_URL=https://your-firefly-instance.com/api
FIREFLY_ACCESS_TOKEN=your_firefly_api_token_here

FIREFLY_TRANSACTION_MIN_TAGS=0

# Admin user IDs (comma-separated Telegram IDs)
ADMIN_IDS=123456789,987654321

# AI Service configuration
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_MODEL=google/gemini-2.0-flash-001
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_REFERER_URL=https://finance-bot.app

OPENROUTER_PROMPT="You are an AI assistant for parsing transaction details from receipts.
Available categories: {{categories}}
Available tags: {{tags}}
Budget information: {{budgetInfo}}
Extract transaction details and provide at least {{minTags}} descriptive tags for each transaction."

# Optional configurations
LOG_LEVEL=info
DEBUG=false
